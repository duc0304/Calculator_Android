<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- TextView hiển thị kết quả -->
    <TextView
        android:id="@+id/tv_display"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="end"
        android:text="0"
        android:textSize="80sp"
        android:background="#D3D3D3"
        android:padding="16dp"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintHeight_percent="0.3" />

    <!-- Guideline để chia cách giữa TextView và các Button -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_percent="0.35"
        android:orientation="horizontal" />

    <!-- Dòng đầu tiên của các button -->
    <Button
        android:id="@+id/btn_ce"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#828282"
        android:insetLeft="5dp"
        android:insetRight="5dp"
        android:text="CE"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:cornerRadius="16dp"
        app:layout_constraintHeight_percent="0.125"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        app:layout_constraintWidth_percent="0.25" />


    <Button
        android:id="@+id/btn_c"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#828282"
        android:text="C"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:insetLeft="5dp"
        android:insetRight="5dp"
        app:cornerRadius="16dp"
        app:layout_constraintHeight_percent="0.125"
        app:layout_constraintStart_toEndOf="@id/btn_ce"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btn_bs"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#828282"
        android:text="BS"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:insetLeft="5dp"
        android:insetRight="5dp"
        app:cornerRadius="16dp"
        app:layout_constraintHeight_percent="0.125"
        app:layout_constraintStart_toEndOf="@id/btn_c"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btn_div"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#828282"
        android:text="/"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:insetLeft="5dp"
        android:insetRight="5dp"
        app:cornerRadius="16dp"
        app:layout_constraintHeight_percent="0.125"
        app:layout_constraintStart_toEndOf="@id/btn_bs"
        app:layout_constraintTop_toBottomOf="@id/guideline"
        app:layout_constraintWidth_percent="0.25" />

    <!-- Dòng thứ hai của các button -->
    <Button
        android:id="@+id/btn_7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#D3D3D3"
        android:text="7"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:insetLeft="5dp"
        android:insetRight="5dp"
        app:cornerRadius="16dp"
        app:layout_constraintHeight_percent="0.125"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_ce"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btn_8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#D3D3D3"
        android:text="8"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:insetLeft="5dp"
        android:insetRight="5dp"
        app:cornerRadius="16dp"
        app:layout_constraintHeight_percent="0.125"
        app:layout_constraintStart_toEndOf="@id/btn_7"
        app:layout_constraintTop_toBottomOf="@+id/btn_ce"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btn_9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#D3D3D3"
        android:text="9"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:insetLeft="5dp"
        android:insetRight="5dp"
        app:cornerRadius="16dp"
        app:layout_constraintHeight_percent="0.125"
        app:layout_constraintStart_toEndOf="@id/btn_8"
        app:layout_constraintTop_toBottomOf="@+id/btn_ce"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btn_mul"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#828282"
        android:text="x"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:insetLeft="5dp"
        android:insetRight="5dp"
        app:cornerRadius="16dp"
        app:layout_constraintHeight_percent="0.125"
        app:layout_constraintStart_toEndOf="@id/btn_9"
        app:layout_constraintTop_toBottomOf="@+id/btn_ce"
        app:layout_constraintWidth_percent="0.25" />

    <!-- Dòng thứ ba của các button -->
    <Button
        android:id="@+id/btn_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#D3D3D3"
        android:text="4"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:insetLeft="5dp"
        android:insetRight="5dp"
        app:cornerRadius="16dp"
        app:layout_constraintHeight_percent="0.125"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_7"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btn_5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#D3D3D3"
        android:text="5"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:insetLeft="5dp"
        android:insetRight="5dp"
        app:cornerRadius="16dp"
        app:layout_constraintHeight_percent="0.125"
        app:layout_constraintStart_toEndOf="@id/btn_4"
        app:layout_constraintTop_toBottomOf="@+id/btn_7"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btn_6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#D3D3D3"
        android:text="6"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:insetLeft="5dp"
        android:insetRight="5dp"
        app:cornerRadius="16dp"
        app:layout_constraintHeight_percent="0.125"
        app:layout_constraintStart_toEndOf="@id/btn_5"
        app:layout_constraintTop_toBottomOf="@+id/btn_7"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btn_sub"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#828282"
        android:text="-"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:insetLeft="5dp"
        android:insetRight="5dp"
        app:cornerRadius="16dp"
        app:layout_constraintHeight_percent="0.125"
        app:layout_constraintStart_toEndOf="@id/btn_6"
        app:layout_constraintTop_toBottomOf="@+id/btn_7"
        app:layout_constraintWidth_percent="0.25" />

    <!-- Dòng thứ tư của các button -->
    <Button
        android:id="@+id/btn_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#D3D3D3"
        android:text="1"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:insetLeft="5dp"
        android:insetRight="5dp"
        app:cornerRadius="16dp"
        app:layout_constraintHeight_percent="0.125"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_4"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btn_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#D3D3D3"
        android:text="2"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:insetLeft="5dp"
        android:insetRight="5dp"
        app:cornerRadius="16dp"
        app:layout_constraintHeight_percent="0.125"
        app:layout_constraintStart_toEndOf="@id/btn_1"
        app:layout_constraintTop_toBottomOf="@+id/btn_4"
        app:layout_constraintWidth_percent="0.25" />
    <Button
        android:id="@+id/btn_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#D3D3D3"
        android:text="3"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:insetLeft="5dp"
        android:insetRight="5dp"
        app:cornerRadius="16dp"
        app:layout_constraintHeight_percent="0.125"
        app:layout_constraintStart_toEndOf="@id/btn_2"
        app:layout_constraintTop_toBottomOf="@+id/btn_4"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#828282"
        android:text="+"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:insetLeft="5dp"
        android:insetRight="5dp"
        app:cornerRadius="16dp"
        app:layout_constraintHeight_percent="0.125"
        app:layout_constraintStart_toEndOf="@id/btn_3"
        app:layout_constraintTop_toBottomOf="@+id/btn_4"
        app:layout_constraintWidth_percent="0.25" />

    <!-- Dòng thứ năm của các button -->
    <Button
        android:id="@+id/btn_neg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#828282"
        android:text="+/-"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:insetLeft="5dp"
        android:insetRight="5dp"
        app:cornerRadius="16dp"
        app:layout_constraintHeight_percent="0.125"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_1"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btn_0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#D3D3D3"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:insetLeft="5dp"
        android:insetRight="5dp"
        app:cornerRadius="16dp"
        app:layout_constraintHeight_percent="0.125"
        app:layout_constraintStart_toEndOf="@id/btn_neg"
        app:layout_constraintTop_toBottomOf="@+id/btn_1"
        app:layout_constraintWidth_percent="0.25" />

    <Button
        android:id="@+id/btn_dot"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#828282"
        android:text="."
        android:textColor="@color/black"
        android:textSize="28sp"
        android:insetLeft="5dp"
        android:insetRight="5dp"
        app:cornerRadius="16dp"
        app:layout_constraintHeight_percent="0.125"
        app:layout_constraintStart_toEndOf="@id/btn_0"
        app:layout_constraintTop_toBottomOf="@+id/btn_1"
        app:layout_constraintWidth_percent="0.25" />
    <Button
        android:id="@+id/btn_equal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#828282"
        android:text="="
        android:textColor="@color/black"
        android:textSize="28sp"
        android:insetLeft="5dp"
        android:insetRight="5dp"
        app:cornerRadius="16dp"
        app:layout_constraintHeight_percent="0.125"
        app:layout_constraintStart_toEndOf="@id/btn_dot"
        app:layout_constraintTop_toBottomOf="@+id/btn_1"
        app:layout_constraintWidth_percent="0.25" />

</androidx.constraintlayout.widget.ConstraintLayout>
